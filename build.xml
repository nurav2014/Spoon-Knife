<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"  classpath="src/selenium.jar"/>
        
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/HelloWorld.jar" basedir="build/classes">
             <manifest>
                <attribute name="Main-Class" value="navigateToNFLScoreboard"/>
            </manifest>
        </jar>
    </target>
<target name="copied">
<copydir src="src"
           dest="build/jar"
           includes="selenium.jar"
           excludes="**/Test.java"
  />
</target>
    <target name="run">
        <java jar="build/jar/HelloWorld.jar">
         <classpath>
           <pathelement location="build/jar/selenium.jar"/>
            <pathelement location="src/selenium.jar"/>
         </classpath>
        </java>
    </target>


  <target name="test" depends="clean,compile,jar,copied,run">
  </target>
</project>	
