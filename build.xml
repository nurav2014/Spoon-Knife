<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"  classpath="src/selenium.jar"/>
        
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/HelloWorld.jar" basedir="build/classes">
            
        </jar>
    </target>
<target name="copied">
<copy todir="build/classes" overwrite="true">
  <fileset includes="selenium.jar"/>
</copy>
</target>
    <target name="run">
        <java jar="build/jar/HelloWorld.jar" fork="true"/>
    </target>


  <target name="test" depends="clean,compile,jar,copied,run"/>
</project>	
